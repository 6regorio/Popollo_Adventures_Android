<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <stroke android:width="2dp" android:color="@color/borderEvento" />
            <gradient
                android:startColor="@color/barraManaVacia"
                android:centerColor="@color/barraManaVacia"
                android:centerY="1.0"
                android:endColor="@color/barraManaVacia"
                android:angle="270"
                />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <stroke android:width="2dp" android:color="@color/borderEvento" />
                <gradient
                    android:startColor="@color/barraManaLlena"
                    android:centerColor="@color/barraManaLlena"
                    android:centerY="1.0"
                    android:endColor="@color/barraManaLlena"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list>